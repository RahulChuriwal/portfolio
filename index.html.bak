        .project-card, .achievement-card, .experience-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .project-card:hover, .achievement-card:hover, .experience-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 0 30px rgba(129, 140, 248, 0.3); /* Match gradient color */
